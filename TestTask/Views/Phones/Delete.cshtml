@model TestTask.Models.Phone
@{
    ViewBag.Title = "Удаление телефона";
}

<div>
    <dl class="dl-horizontal">
        <dt>Страна</dt>
        <dd>
            @Html.DisplayFor(model => model.Number)
        </dd>        
    </dl>

    <div>
        <form asp-controller="Phones" asp-action="Delete" method="post">
            <div class="form-group">
                <input type="submit" class="btn btn-default" value="Удалить" />
            </div>
        </form>
    </div>
</div>