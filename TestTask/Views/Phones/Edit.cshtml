@model TestTask.Models.Phone
@{
    ViewBag.Title = "Редактирование телефона";
}
<form asp-action="edit" asp-controller="Phones" asp-route-id="@Model.Id">
    <div class="form-group">
        <label asp-for="Number" class="control-label">Номер</label>
        <input type="text" asp-for="Number" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="OrganizationId" class="control-label">Организация</label>
        <select name="OrganizationId" asp-items="@ViewBag.Organizations" class="form-control"></select>
    </div>
    <div class="form-group">
        <label asp-for="PersonId" class="control-label">ФИО</label>
        <select name="PersonId" asp-items="@ViewBag.Persons" class="form-control"></select>
    </div>
    <div class="form-group">
        <label asp-for="RoomId" class="control-label">Адрес</label>
        <select name="RoomId" asp-items="@ViewBag.Rooms" class="form-control"></select>
    </div>
    <div class="form-group">
        <input type="submit" value="Сохранить" class="btn btn-default" />
    </div>
</form>