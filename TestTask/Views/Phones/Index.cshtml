@using TestTask.Models
@model IEnumerable<Phone>
@{
    ViewData["Title"] = "Справочник телефонов";
}

<a asp-action="Create">Добавить адрес</a>
<table class="table">
    <tr>
        <th>Номер</th>
        <th>Организация</th>
        <th>ФИО</th>
        <th>Адрес</th>
        <th></th>
    </tr>
    @foreach (Phone p in Model)
    {
<tr>
    <td>@p.Number</td>
    <td>@p.Organization?.Name</td>
    <td>@p.Person?.FullName</td>
    <td>@p.Room?.FullAddress</td>
    <td>
        <form asp-action="Delete" asp-route-id="@p.Id" method="post">
            <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@p.Id">Изменить</a>
            <button type="submit" class="btn btn-sm btn-danger">
                Удалить
            </button>
        </form>
    </td>
</tr>
    }
</table>